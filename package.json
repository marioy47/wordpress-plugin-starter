{
	"name": "wordpress-plugin-starter",
	"version": "1.0.0",
	"description": "",
	"scripts": {
		"start": "wp-scripts start",
		"build:assets": "wp-scripts build",
		"build:pot": "node bin/wp-pot.js --domain wordpress-plugin-starter --package WordPress_Plugin_Starter --src '*.php' --src 'php/**/*.php' --src 'js/**/*.js'",
		"build": "run-p build:*",
		"postinstall": "composer install",
		"cspell-params": "cspell --relative --dot --no-progress --show-suggestions --show-context",
		"lint:css": "wp-scripts lint-style scss/**/*.scss",
		"lint:js": "wp-scripts lint-js js/**/*.js",
		"lint:md": "wp-scripts lint-md-docs '*.md'",
		"lint:spell": "npm run cspell-params -- -e README.md -e gulpfile.js .",
		"lint": "run-p lint:*",
		"format:css": "wp-scripts lint-style scss/**/*.scss",
		"format:js": "wp-scripts lint-js js/**/*.js",
		"format:md": "wp-scripts lint-md-docs '*.md' --fix",
		"format": "run-p format:*",
		"prepare": "husky install"
	},
	"repository": {
		"type": "git",
		"url": "git+ssh://git@github.com/marioy47/wordpress-plugin-starter.git"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"homepage": "https://github.com/marioy47/wordpress-plugin-starter/blob/master/README.md",
	"devDependencies": {
		"@commitlint/cli": "^17.6.3",
		"@commitlint/config-conventional": "^17.6.3",
		"@wordpress/scripts": "^26.5.0",
		"browser-sync-webpack-plugin": "^2.3.0",
		"cspell": "^6.31.1",
		"husky": "^8.0.3",
		"lint-staged": "^13.2.2",
		"npm-run-all": "^4.1.5",
		"webpack-fix-style-only-entries": "^0.6.1",
		"wp-pot": "^1.10.2"
	}
}
